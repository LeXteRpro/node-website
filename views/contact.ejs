<%- include partials/header.ejs %>


<div class="contact-page">

	<div class="row-fluid">
		<div class="col-md-3 col-centered">
			
			<!-- Autogenerated from routes: index.js -->
			<h1><%= title %></h1>

		</div>
	</div>

	<div class="row-fluid">
		<div class="col-md-3 col-centered">
			
			<h2>Send a Message</h2>

		</div>
	</div>


	<section class="row contact-form-wrapper" >

		<div id="contact-form" class="col-xs-11 col-sm-7 col-md-8" >
			<form class="form-layout">

				<label>
					<span>Your Name</span>
					<input id="form_name" type="text" name="name" placeholder="Your Name" />
				</label>

				<label>
					<span>Your Email</span>
					<input id="form_email" type="email" name="email" placeholder="Valid Email Address" />
				</label>

				<label>
					<span>Message</span>
					<textarea id="form_message" name="message" placeholder="Message"></textarea>
				</label>  

				<div class="button-wrapper">
					<ul class="buttons">
						<li><a href="#" class="button" id="submit_button">Send</a></li>
					</ul>  
				</div>
			</form>

		</div> <!-- Close Form Container -->
	</section> <!-- Close Form Wrapper-->
</div> <!-- Close Contact Page Wrapper -->

<!-- Insert Footer-->
<%- include partials/footer.ejs %>